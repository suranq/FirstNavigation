<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    tools:context="com.example.firstnavigation.fragments.topic.ClassifyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/tool"
            android:cursorVisible="true"
            android:backgroundTint="@color/colorGray"
            android:drawableLeft="@mipmap/search"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入关键词搜索"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/search_text_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:text="搜索"
                android:textColor="@color/colorBlue"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:background="@color/colorGray"
        android:layout_marginTop="@dimen/dp_7_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />

    <TextView
        android:background="@color/colorGray"
        android:layout_marginTop="@dimen/dp_7_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />

    <TextView
        android:text="热门标签分类"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7_5"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@color/colorGray"
        android:layout_marginTop="@dimen/dp_7_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_classify"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
